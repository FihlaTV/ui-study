flex-version = flex

@import 'nib'

global-reset()

notext()
	white-space nowrap
	text-indent -9999px
	overflow hidden

content-space()
	content '\00a0'

pseudo-block()
	content-space()
	display block
	position absolute

uniform-centerize()
	display flex
	flex-direction column
	justify-content center
	
hidpi()
	@media	only screen and (-webkit-min-device-pixel-ratio: 1.3),
	only screen and (-o-min-device-pixel-ratio: 13/10),
	only screen and (min-resolution: 120dpi)
		{block}

mobile()
	@media only screen and (max-width: $mobile-threshold), screen and (max-height: $mobile-threshold)
		{block}

